<h3> <%= @list.name %> </h3>


<% @list.bookmarks.each do |bookmark| %>
<%= bookmark.movie.title %>
<%= button_to "Delete Movie", bookmark_path(bookmark), method: :delete %>
<hr>
<% end %>

<%= link_to "Back to all Lists", lists_path, class: "btn btn-primary text-white" %>

<hr>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit %>
<% end %>
