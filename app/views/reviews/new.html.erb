<h2>Create a new Review</h2>

<%= simple_form_for([@list, @bookmark, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to #{@list.name}", list_path(@list.id), class: "btn btn-primary text-white" %>
<%= link_to "Back to all Lists", lists_path, class: "btn btn-primary text-white" %>
